pipeline{
    agent any
    stages{
        stage("Restore .NET Dependencies"){
            steps{
                bat "dotnet restore"
            }
        }
        stage("Build .NET"){
            steps{
                bat "dotnet build --no-restore"
            }
        }
        stage("Run Tests"){
            steps{
                bat "dotnet test --no-build --verbosity normal"
            }
        }
    }
}